h1 四択テスト

section#question-params.user-wrap(style="display: block;")
  h3 出題条件
  .form-group
    p
      span HSKレベル
      .form-check.form-check-inline
        input.form-check-input.hsklevel#chk1 type="checkbox" value="1"
        label.form-check-label 1
      .form-check.form-check-inline 
        input.form-check-input.hsklevel#chk2 type="checkbox" value="2"
        label.form-check-label 2
      .form-check.form-check-inline
        input.form-check-input.hsklevel#chk3 type="checkbox" value="3"
        label.form-check-label 3
      .form-check.form-check-inline
        input.form-check-input.hsklevel#chk4 type="checkbox" value="4"
        label.form-check-label 4
      .form-check.form-check-inline
        input.form-check-input.hsklevel#chk5 type="checkbox" value="5"
        label.form-check-label 5
      .form-check.form-check-inline
        input.form-check-input.hsklevel#chk6 type="checkbox" value="6"
        label.form-check-label 6
  .form-group
    p
      .form-check
        input.form-check-input#chk-studied type="checkbox"
        label.form-check-label 学習済み単語
  .form-group
    p
      span 問題数
      .form-check.form-check-inline 
        input.form-check-input#radio1a type="radio" name="radio1" value="10"
        label.form-check-label 10
      .form-check.form-check-inline
        input.form-check-input#radio1b type="radio" name="radio1" value="15" checked="true"
        label.form-check-label 15
      .form-check.form-check-inline
        input.form-check-input#radio1c type="radio"name="radio1" value="30"
        label.form-check-label 30
      .form-check.form-check-inline
        input.form-check-input#radio1d type="radio" name="radio1" value="50"
        label.form-check-label 50
      .form-check.form-check-inline
        input.form-check-input#radio1e type="radio" name="radio1" value="100"
        label.form-check-label 100
  button.btn.btn-primary#startbutton 開始

section#question.user-wrap(style="display: none;")
  p.display-6#pinyin pinyin
  p.display-3#word word
  div.user-wrap(style="display: flex; justify-content: space-between;")
    button.btn.btn-outline-dark.choice-button#choice1 選択肢1
    button.btn.btn-outline-dark.choice-button#choice2 選択肢2
    button.btn.btn-outline-dark.choice-button#choice3 選択肢3
    button.btn.btn-outline-dark.choice-button#choice4 選択肢4

section#question-next.user-wrap(style="display: none;")
  button.btn.btn-primary#nextbutton 次へ

section#question-end.user-wrap(style="display: none;")
  table.table.table-bordered.table-responsive
    thead
      tr
        th scope="col" No.
        th scope="col" ピンイン
        th scope="col" 問題
        th scope="col" 意味
        th scope="col" 正誤
    tbody#answer-table
  = link_to "終了", root_path, class: "btn btn-primary", id: "#nextbutton"